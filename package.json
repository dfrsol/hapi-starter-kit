{
  "name": "starter-kit",
  "version": "1.0.0",
  "description": "Starting point for a Hapi.js - React.js Project",
  "main": "index.js",
  "scripts": {
    "start": "forever --minUptime 1000 --spinSleepTime 1000 -c \"node\" ./dist/server.js",
    "dev": "npm run watch",
    "build": "npm run clean:dist && concurrently \"npm run build:server\" \"npm run build:client\" \"gulp scss\"",
    "build:server": "NODE_ENV=production webpack -p --colors --display-error-details --config configs/webpack.server.js",
    "build:client": "NODE_ENV=production webpack --colors --display-error-details --config configs/webpack.client.js",
    "build:scss": "gulp scss",
    "clean:dist": "del 'dist/**'",
    "test": "npm run lint && npm run test:unit && npm run test:browser && npm run test:coverage",
    "test:browser": "NODE_ENV=test gulp browser-tests",
    "test:coverage": "gulp summate-coverage-reports",
    "test:unit": "NODE_ENV=test nyc mocha --check-leaks --globals 'window,document,history,navigator' --recursive --require babel-register $(find test -path '*_spec.js')",
    "lint": "gulp lint",
    "lint:scss": "gulp scsslint",
    "watch": "npm run clean:dist && concurrently --kill-others \"npm run watch:server-start\" \"npm run watch:server\" \"npm run watch:client\" \"npm run watch:scss\"",
    "watch:server-start": "node node_modules/just-wait --pattern \"dist/*.js\" && NODE_ENV=development npm run start",
    "watch:server": "NODE_ENV=development webpack --watch --verbose --colors --display-error-details --config configs/webpack.server-watch.js",
    "watch:scss": "gulp watch",
    "watch:client": "NODE_ENV=development webpack-dev-server --config configs/webpack.client-watch.js",
    "integration": "echo no Integration"
  },
  "repository": {
    "type": "git",
    "url": "https://www.github.com/dfrsol/hapi-starter-kit"
  },
  "bugs": {
    "url": "https://www.github.com/dfrsol/hapi-starter-kit/issues"
  },
  "contributors": [
    "Josh Buselt"
  ],
  "engines": {
    "npm": "^2.11.2",
    "node": "6.9.1"
  },
  "dependencies": {
    "concurrently": "^3.1.0",
    "del": "^2.2.2",
    "del-cli": "^1.0.0",
    "forever": "^0.15.3",
    "good": "^7.0.2",
    "good-console": "^6.3.1",
    "good-squeeze": "^5.0.0",
    "handlebars": "^4.0.10",
    "hapi": "^15.2.0",
    "hoek": "^4.1.0",
    "inert": "^4.0.2",
    "json-loader": "^0.5.4",
    "just-wait": "^1.0.9",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "vision": "^4.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.7",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-react": "^6.16.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "enzyme": "^2.8.2",
    "eslint": "^3.10.2",
    "eslint-config-hapi": "^10.0.0",
    "eslint-plugin-hapi": "^4.0.0",
    "eslint-plugin-react": "^6.7.1",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.1",
    "gulp-eslint": "^3.0.1",
    "gulp-jsonlint": "^1.1.2",
    "gulp-nice-package": "^1.1.0",
    "gulp-sass": "^2.3.2",
    "gulp-sass-lint": "^1.3.2",
    "gulp-task-loader": "^1.4.4",
    "gulp-util": "^3.0.7",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-webpack": "^1.8.0",
    "map-stream": "0.0.6",
    "mocha": "^3.1.2",
    "nodemon": "^1.11.0",
    "nyc": "^10.0.0-candidate.2",
    "react-test-renderer": "^15.5.4",
    "sinon": "2.0.0-pre",
    "source-map-support": "^0.4.6",
    "through2": "^2.0.3",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5",
    "webpack-node-externals": "^1.5.4"
  }
}
